format = <label>
exec = echo "MD: $([ -f /tmp/system_color_scheme.tmp ] && grep -oP "='\K[^']+" /tmp/system_color_scheme.tmp || echo "light" ) "
click-left=$HOME/.scripts/mode.sh -t
